<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@mipmap/icon_nobg" />

    <LinearLayout
        android:id="@+id/btn_qq_login"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/selector_qq_login_btn"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_qq_login"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/qq_login_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0FFF"
            android:text="@string/qq_login"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="127dp"
            android:layout_height="1dp"
            android:background="#FF979797" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="or"
            android:textColor="#FF979797"
            android:textSize="16sp" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="1dp"
            android:background="#FF979797" />

    </LinearLayout>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_name"
        style="@style/login_edit_style"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/account_name_hint" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_password"
        style="@style/login_edit_style"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/account_pwd_hint"
        android:inputType="textPassword" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mount_bg">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_login_btn"
            android:text="@string/login_btn"
            android:textColor="#fff"
            android:textSize="20sp" />


    </FrameLayout>

